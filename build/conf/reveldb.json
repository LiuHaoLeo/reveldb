{
    "server": {
        "host": "0.0.0.0",
        "rpcports": "8087, 8088",
        "restports": "8089, 9000",
        "backlog": 1024,
        "https": true,
        "username": "root",
        "password": "root",
        "datadir": "/tmp/reveldb/",
        "pidfile": "/tmp/reveldb/reveldb.pid"
    },
    "db": {
        "dbname": "default",
        "lru_cache_size": 6553500,
        "create_if_missing": true,
        "error_if_exist": false,
        "write_buffer_size": 6553500,
        "paranoid_checks": true,
        "max_open_files": 10240,
        "block_size": 6553500,
        "block_restart_interval": 16,
        "compression": false,
        "verify_checksums": false,
        "fill_cache": false,
        "sync": false
    },
    "log": {
        "level":"DEBUG",
        "stream": "logs/reveldb.log"
    },
    "ssl": {
        "key": "conf/ssl/reveldb.pem",
        "cert": "conf/ssl/reveldb.crt",
        "capath": "conf/ssl/",
        "ciphers": "RC4+RSA:HIGH:+MEDIUM:+LOW",
        "ssl_ctx_timeout": 3600,
        "verify_peer": true,
        "verify_depth": 42
    }
}
